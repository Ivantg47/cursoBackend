<div>
    <section class="intro">
        <div class="bg-image h-100">
            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <h1>Products List</h1>
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-0">
                                    <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                                        <table class="table table-striped table-bordered table-sm" cellspacing="0" style="width:100%">
                                            <tr class="text-uppercase text-success">
                                                <th scope="col" style="display:none">ID</th>
                                                <th scope="col">Title</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Code</th>
                                                <th scope="col">Stock</th>
                                                <th scope="col">Category</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                            <tbody>
                                            {{#each prod}}
                                                <tr class="alert">
                                                    <td style="display:none">{{this._id}}</td>
                                                    <td>{{this.title}}</td>
                                                    <td>{{this.description}}</td>
                                                    <td>{{this.price}}</td>
                                                    <td><img src="{{this.thumbnail}}" alt="No image" width="72" height="72" style="vertical-align:middle"></td>
                                                    <td>{{this.code}}</td>
                                                    <td>{{this.stock}}</td>
                                                    <td>{{this.category}}</td>
                                                    <td>{{this.status}}</td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<style>
.intro {
  height: 100%;
}

table td,
table th {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.card {
  border-radius: .5rem;
}

.table-scroll {
  border-radius: .5rem;
}

.thead {
  top: 0;
  position: sticky;
}

td {
    vertical-align: middle;
}
</style>


