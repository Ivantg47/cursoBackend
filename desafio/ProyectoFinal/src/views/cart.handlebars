<div>
    <section class="intro">
        <div class="bg-image h-100">
            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <h1>Cart: {{cart._id}}</h1>
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-0">
                                    <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                                        <table class="table table-striped table-bordered table-sm" cellspacing="0" style="width:100%">
                                            <tr class="text-uppercase text-success">
                                                <th scope="col" style="display:none">ID</th>
                                                    <th scope="col"></th>
                                                    <th scope="col"></th>
                                                    <th scope="col">Producto</th>
                                                    <th scope="col">Precio</th>
                                                    <th scope="col">Cantidad</th>
                                                    <th scope="col">Total</th>
                                                    <th scope="col"></th>
                                            </tr>
                                            <tbody>
                                            {{#each cart.products}}    
                                                <tr class="alert">
                                                    <td style="display:none">{{this.product._id}}</td>
                                                    <td><input type="checkbox" name="" id="" Checked></td>
                                                    <td><img src="{{this.product.thumbnail.[0]}}" alt="No image" width="72" height="72" style="vertical-align:middle"></td>
                                                    <td>{{this.product.title}}</td>
                                                    <td>{{this.product.price}}</td>
                                                    <td>{{this.quantity}}</td>
                                                    <td>0</td>
                                                    <td style="text-align: center;"><button class="btn btn-outline-danger"  onclick=""><i class="bi bi-x-lg" width="32" height="32" fill="red"></i></button></td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
